@model List<Blog>

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Son 10 Blog</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th> Başlık </th>
                            <th> Kategori </th>
                            <th> Tarih </th>
                            <th> Durum </th>
                            <th> Detay</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    <img src="~/CoreBlogTema/images/@item.BlogImage" class="mr-2" alt="image"> @item.BlogTitle
                                </td>
                                <td>
                                   @item.Category.CategoryName
                                </td>
                                <td> @item.BlogCreateDate.ToShortDateString() </td>
                                <td>
                                    @Html.Raw(item.BlogStatus==true ? "<label class='badge badge-gradient-success'>Aktif</label>" : "<label class='badge badge-gradient-danger'>Pasif</label>")
                                </td>
                                <td><a href="/Blog/BlogReadAll/@item.BlogId" class="btn btn-dark btn-sm">Detay</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
