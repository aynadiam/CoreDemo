@model Writer

@{
    ViewData["Title"] = "Yazar Profil Bilgilerini Düzenle";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> @ViewData["Title"] </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">

                    <form asp-action="WriterEditProfile" class="forms-sample">
                        <input type="hidden" asp-for="WriterId" />
                        <div class="form-group">
                            <label>Yazar Ad Soyad</label>
                            <input asp-for="WriterName" class="form-control">
                            <span asp-validation-for="WriterName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Yazar Mail</label>
                            <input asp-for="WriterMail" class="form-control">
                            <span asp-validation-for="WriterMail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Yazar Şifre</label>
                            <input asp-for="WriterPassword" class="form-control">
                            <span asp-validation-for="WriterPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Yazar Görsel</label>
                            <input type="file" name="img[]" class="file-upload-default">
                            <div class="input-group col-xs-12">
                                <input type="text" class="form-control file-upload-info" disabled placeholder="Resim Yükle">
                                <span class="input-group-append">
                                    <button class="file-upload-browse btn btn-gradient-primary" type="button">Resim Seç</button>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Yazar Hakkında</label>
                            <textarea asp-for="WriterAbout" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="WriterAbout" class="text-danger"></span>
                        </div>
                        <input type="submit" value="Güncelle" class="btn btn-gradient-primary mr-2">
                        <a asp-action="BlogListByWriter" class="btn btn-light">Vazgeç</a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

